<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:background="@color/skyblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <include layout="@layout/toolbar" />

       <LinearLayout
           android:background="@drawable/bg_calendar"
           android:layout_gravity="center"
           android:layout_width="390dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <LinearLayout
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <ImageButton
                   android:id="@+id/btn_frontmonth"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:src="@drawable/arrow_square_left"  />
               <TextView
                   android:fontFamily="@font/dalseohealingbold"
                   android:layout_marginLeft="3dp"
                   android:layout_marginRight="3dp"
                   android:id="@+id/tv_month_year"
                   android:textSize="20dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="몇년 몇월" />

               <ImageButton
                   android:id="@+id/btn_nextmonth"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:src="@drawable/arrow_square_right" />


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="SUN" />

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="MON"/>

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:id="@+id/tv_tuesday"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="TUE"/>

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="WEN" />

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="THU"/>

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="FRI" />

               <TextView
                   android:background="@drawable/underline"
                   android:textSize="10dp"
                   android:gravity="center"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="SAT" />

           </LinearLayout>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/recyclerview"
               class="androidx.appcompat.app.AlertController$RecycleListView"
               android:layout_width="match_parent"
               android:layout_height="301dp" />

       </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_todolist"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/btn_gotoAddActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/add_square"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todoListRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:scrollbars="vertical" />
        </LinearLayout>


    </LinearLayout>
    <include layout="@layout/activity_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>